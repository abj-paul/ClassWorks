package producer.consumer.relationship;

public class Producer {
	Storage storageRef;
	final int max = 500;
	final int min = 300;
	Producer(Storage storageRef){
		this.storageRef = storageRef;
	}
	
	public void run() {
		for(int i=0; i<storageRef.get_size(); i++) {
			this.storageRef.write(i);
			try {
			long delay = (long)Math.random()*(max-min+1)+min;   
			Thread.sleep(delay);
			}catch(InterruptedException e) {e.printStackTrace();}
		}
	}
}
